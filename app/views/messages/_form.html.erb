<%= semantic_form_for @message, validate: true do |f| %>
  <%= f.inputs do %>
    <%= f.input :content, validate: true %>
  <% end %>
  <%= f.inputs do %>
    <%= f.inputs :first_name, :last_name, :email, for: :user %>
  <% end %>
  <%= f.actions do %>
    <%= f.submit "Verzenden" %>
  <% end %>
<% end %>