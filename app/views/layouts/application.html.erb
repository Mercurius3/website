<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%= render 'shared/title' %>
    <%= favicon_link_tag  %>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <script type="text/javascript" src="http://fast.fonts.com/jsapi/58e94345-bb07-4197-840e-3d5e23df6f02.js"></script>
    <%= csrf_meta_tags unless response.cache_control[:public] %>
  </head>
  <body id="horizon">
    <%= render 'shared/header' %>
    <div id="main" class="cf">
      <section id="sidebar" class="column">
        <%= render 'shared/sidebar' %>
      </section>
      <section id="content" class="column">
        <%= render 'shared/errors' unless response.cache_control[:public] %>
        <%= yield %>
        <%= render 'shared/video' if params[:id] == 'home' %>
      </section>
    </div>
    <%= render 'shared/footer' %>
    <%= javascript_include_tag "application", :defer => "defer" %>
  </body>
</html>