<!DOCTYPE html>
<!--[if lt IE 7]>
<script src="/assets/IE7.js"></script>
<![endif]-->

<!--[if lt IE 8]>
<script src="/assets/IE8.js"></script>
<![endif]-->

<!--[if lt IE 8]>
<script src="/assets/IE9.js"></script>
<![endif]-->
<!--[if lt IE 9]><html class="ie">
<%= javascript_include_tag "html5shiv" %>
<![endif]-->
<!--[if !IE]><!--><html class=""><!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <%= render 'shared/title' %>
    <%= favicon_link_tag %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags unless response.cache_control[:public] %>
  </head>
  <body id="horizon">
    <div id="fb-root"></div>
    <script>
    (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_EN/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
    // jQuery method
    $('video').mediaelementplayer();
    </script>
    <%= render 'layouts/header' %>
    <%= render 'shared/errors' unless response.cache_control[:public] %>
    <div id="wrapper" class="clearfix">
      <nav id="main_nav" class="clearfix">
        <%= render 'shared/nav' %>
      </nav>
      <section id="sidebar">
        <nav id="sidebar_nav">
          <%= render 'layouts/sidebar' %>
        </nav>
      </section>
      <section id="content">
        <%= yield %>
      </section>
      <section id="secondary_sidebar">
        <p>Dummy paragraph.</p>
        <%= render 'layouts/secondary_sidebar' %>
      </section>
    </div>
    <footer>
      <div class="fb-like" data-href="https://www.facebook.com/Lasschelassche" data-send="true" data-width="450" data-show-faces="true" data-font="arial" data-action="recommend"></div>
      <%= render 'shared/footer' %>
    </footer>
  </body>
</html>