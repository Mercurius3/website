<!DOCTYPE html>
<html>
<head>
  <%= render 'shared/title' %>
  <%= webfont_for_current_environment %>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="horizon">
  <%= render 'shared/header' %>  
  <div id="main" class="cf">
    <section id="sidebar" class="column">
      <%= raw render 'shared/sidebar' if current_page?(url_for(:controller => 'pages', :action => 'show', :id => 'programma')) %>
    </section>
    <section id="content" class="column">
      <%= yield %>
      <%= switch_mobile_view %>
    </section>
  </div>
  <%= render 'shared/footer' %>
</body>
</html>
