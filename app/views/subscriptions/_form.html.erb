<%= simple_form_for @subscription do |f| %>
  <% if @product %>
    <%= f.hidden_field :product_id, value: @product.id %>
    <%= content_tag :p, "Inschrijving voor #{@product.name}" %>
  <% else %>
    <%= f.association :product %>
  <% end %>
  <%= f.simple_fields_for :user do |user| %>
    <%= user.input :first_name %>
    <%= user.input :last_name %>
    <%= user.input :email %>
  <% end %>
  <%= f.input :accept_conditions, label: "Ik accepteer de #{link_to('voorwaarden', page_path(:voorwaarden))}.".html_safe %>
  <%= f.submit "Aanmelden" %>
<% end %>