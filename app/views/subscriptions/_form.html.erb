<%= simple_form_for @subscription do |f| %>
  <%= f.error_notification %>
  <%= f.input :product %>
  <%= f.input :first_name, label: "Voornaam", placeholder: "Uw voornaam" %>
  <%= f.input :last_name, label: "Achternaam", placeholder: "Uw achternaam" %>
  <%= f.input :email, label: "Emailadres", placeholder: "Uw emailadres" %>
  <%= f.input :accept_conditions, label: "Ik accepteer de voorwaarden." %>
  <%= f.submit "Aanmelden" %>
<% end %>