<%= simple_form_for @user, validate: true do |f| %>
  <%= f.error_notification %>
  <%= f.input :first_name, label: "Voornaam", placeholder: "Uw voornaam", validate: true %>
  <%= f.input :last_name, label: "Achternaam", placeholder: "Uw achternaam", validate: true %>
  <%= f.input :sex, label: "Geslacht", collection: ["Vrouw", "Man"], prompt: "Wat is uw geslacht?", validate: true %>
  <%= f.input :email, label: "Emailadres", placeholder: "Uw emailadres", validate: true %>
  <%= f.input :postcode, label: "Postcode", placeholder: "1111 AB", validate: true %>
  <%= f.input :date_of_birth, :as => :date, :start_year => Date.today.year - 90,
                              :end_year => Date.today.year - 12, :discard_day => false,
                              :order => [:day, :month, :year] %>
  <%= f.submit "Account aanmaken" %>
<% end %>