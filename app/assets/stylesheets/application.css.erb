@font-face {
    font-family: 'BevanRegular';
    src: url(<%= asset_path 'fonts/Bevan-webfont.eot' %>);
    src: url(<%= asset_path 'fonts/Bevan-webfont.eot?#iefix' %>) format('embedded-opentype'),
         url(<%= asset_path 'Bevan-webfont.woff' %>) format('woff'),
         url(<%= asset_path 'Bevan-webfont.ttf' %>) format('truetype'),
         url(<%= asset_path 'Bevan-webfont.svg#BevanRegular' %>) format('svg');
    font-weight: normal;
    font-style: normal;

}